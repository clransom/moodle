{{!
    @template core/file_display

    Template for displaying a file.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name": "Filename",
        "icon": "<img src='icon' alt='alt'>",
        "url": "www.example.com/example.jpg"
    }
}}

<div class="core_file_display">
    <a href="{{url}}">{{{icon}}}{{{name}}}</a>
    {{{plagiarismlinks}}}
    {{{portfoliobutton}}}
    {{#modifiedtime}}
        <span class="filedisplay-modifiedtime">
            {{modifiedtime}}
        </span>
    {{/modifiedtime}}
</div>
