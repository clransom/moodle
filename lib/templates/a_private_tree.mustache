{{!
    @template core/accessible_tree

    Template for displaying an accessible tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "id": file_tree1,
        "showexpanded": true,
        "displayname": false,
        "isroot": true,
        "subdirs": [
            {
                "name": "Folder",
                "icon": "<img src='icon' alt='alt'>",
                "isdir": true,
                "subdirs": [
                    {
                        "name": "File1",
                        "icon": "<img src='icon' alt='alt'>",
                        "subdirs": null
                     }
                ]
            },
            {
                "name": "File2",
                "icon": "<img src='icon' alt='alt'>",
                "subdirs": null
            }
        ]
    }
}}

{{#content}}
{{#isroot}}
    <div id="{{uniqid}}-filetree" class="core_a_private_tree">
    <ul role="tree" aria-label="{{treelabel}}">
{{/isroot}}
        <li role="treeitem" {{#isdir}}{{#hascontent}}aria-expanded="false"{{/hascontent}}{{/isdir}}>
        {{^isroot}}
            {{#isdir}}
                <p>{{{icon}}}{{{name}}}</p>
            {{/isdir}}
            {{#hascontent}}
                <ul role="group" aria-hidden="true">
            {{/hascontent}}
        {{/isroot}}
            {{#isdir}}
                {{>core/a_private_tree}}
            {{/isdir}}
            {{^isdir}}
                {{>core/accessible_treeitem}}
            {{/isdir}}
        {{^isroot}}
            {{#hascontent}}
                </ul>
            {{/hascontent}}
        {{/isroot}}
        </li>
{{#isroot}}
    </ul>
</div>
{{/isroot}}
{{/content}}


{{#js}}
require(['core/accessible_tree'], function(APrivateTree) {
    APrivateTree.init('{{uniqid}}-filetree');
});
{{/js}}
