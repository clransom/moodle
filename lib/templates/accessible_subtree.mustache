{{!
    @template core/accessible_subtree

    Template for displaying a subtree in a file tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name": "Folder",
        "icon": "<img src='icon' alt='alt'>",
        "hassubdirs": true,
        "subdirs": [
            {
                "name": "File1",
                "icon": "<img src='icon' alt='alt'>",
                "hassubdirs": false,
                "subdirs": null
             }
        ]
    }
}}

{{$treeitem}}
    <li role="treeitem" aria-expanded="false">
        <a href="{{url}}" tabindex="-1">{{{icon}}}{{{name}}}</a>
    </li>
{{/treeitem}}
{{#hassubdirs}}
    <ul role="group" aria-hidden="true">
        <li role="treeitem" aria-expanded="false">
            <p>
                {{>core/accessible_subtree}}
            </p>
        </li>
    </ul>
{{/hassubdirs}}

{{>core/file_display}}
{{#hassubdirs}}
    <ul>
        {{#subdirs}}
            <li>
                {{>core/file_subtree}}
            </li>
        {{/subdirs}}
    </ul>
{{/hassubdirs}}
