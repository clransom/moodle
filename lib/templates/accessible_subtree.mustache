{{!
    @template core/accessible_subtree

    Template for displaying a subtree in a file tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name": "Folder",
        "icon": "<img src='icon' alt='alt'>",
        "hassubdirs": true,
        "children": [
            {
                "name": "File1",
                "icon": "<img src='icon' alt='alt'>",
                "hassubdirs": false,
                "subdirs": null
             }
        ]
    }
}}
{{#isdir}}
<ul role="group" aria-hidden="true">
    <li role="treeitem" aria-expanded="false">
{{/isdir}}
        {{#isdir}}
            <p>{{{icon}}}{{{name}}}</p>
            {{#subdirs}}
                {{>core/accessible_subtree}}
            {{/subdirs}}
        {{/isdir}}
        {{^isdir}}
            <li role="treeitem">
            {{$treeitem}}
                <a href="{{url}}" tabindex="-1">{{{icon}}}{{{name}}}</a>
            {{/treeitem}}
        {{/isdir}}
    </li>
{{#isdir}}
</ul>
{{/isdir}}
