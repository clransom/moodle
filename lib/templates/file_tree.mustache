{{!
    @template core/file_tree

    Template for displaying a file tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "id": file_tree1,
        "showexpanded": true,
        "displayname": false,
        "isroot": true,
        "subdirs": [
            {
                "name": "Folder",
                "icon": "<img src='icon' alt='alt'>",
                "isdir": true,
                "subdirs": [
                    {
                        "name": "File1",
                        "icon": "<img src='icon' alt='alt'>",
                        "subdirs": null
                     }
                ]
            },
            {
                "name": "File2",
                "icon": "<img src='icon' alt='alt'>",
                "subdirs": null
            }
        ]
    }
}}

{{#isroot}}
    <div id="{{uniqid}}-filetree" class="core_file_tree">
    <ul role="tree" aria-label="{{treelabel}}">
{{/isroot}}
{{#content}}
    {{#displayname}}
    <li role="treeitem" {{#isdir}}{{#hascontent}}aria-expanded="false"{{/hascontent}}{{/isdir}}>
        {{#isdir}}
            <p>{{{icon}}}{{{name}}}</p>
            {{#hascontent}}
                <ul role="group" aria-hidden="true">
            {{/hascontent}}
        {{/isdir}}
    {{/displayname}}
        {{#isdir}}
            {{>core/file_tree}}
        {{/isdir}}
        {{^isdir}}
            {{>core/file_display}}
        {{/isdir}}
    {{#displayname}}
        {{#isdir}}{{#hascontent}}
            </ul>
        {{/hascontent}}{{/isdir}}
    </li>
    {{/displayname}}
{{/content}}
{{#isroot}}
    </ul>
</div>
{{/isroot}}



{{#js}}
require(['core/file_tree'], function(FileTree) {
    FileTree.init('{{uniqid}}-filetree');
});
{{/js}}
